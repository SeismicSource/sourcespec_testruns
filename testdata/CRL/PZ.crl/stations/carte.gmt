#!/bin/csh

set ecart = 200

# antenne EF
set file = EF.utm

set lat = `head -1 $file | awk '{print $1}'`
set lon = `head -1 $file | awk '{print $2}'`

tail -4 $file | awk -v lat=$lat -v lon=$lon '{print ($2-lat)*1000, ($3-lon)*1000, $1}' > tmp

psbasemap -JX10 -P -R'-'$ecart/$ecart/'-'$ecart/$ecart -B100/100 -K > EF.ps
psxy -J -R -Sc.3 -N -G255/000/000 -: -O -K < tmp >> EF.ps
awk '{print $1, $2, "14 0 6 LB ", $3}' tmp | pstext -J -R -: -O >> EF.ps

